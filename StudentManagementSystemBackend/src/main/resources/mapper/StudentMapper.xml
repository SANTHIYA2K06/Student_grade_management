<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="uk.ac.ucl.comp0010.mapper.StudentMapper">
  <select id="listStudents" resultType="uk.ac.ucl.comp0010.vo.StudentListVo">
    SELECT id,
           first_name,
           last_name,
           email,
           program_of_study
    FROM student ${ew.customSqlSegment}
  </select>
  <select id="listPrograms" resultType="java.lang.String">
    SELECT program_of_study
    FROM student
  </select>
</mapper>
